@model Proyecto_DSW.Models.DTO.ConfirmarCompraVista
@using Proyecto_DSW.Models
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Mvc.Rendering
@using Proyecto_DSW.Models.DTO

@{
    ViewData["Title"] = "Confirmar Compra";
    decimal total = 0;
}

<link rel="stylesheet" href="~/css/ConfirmarCompra.css.css" />

<div class="confirmar-container">
    <div class="confirmar-header">
        <h2>Confirmar Compra</h2>
    </div>

    @if (!Model.Detalles.Any())
    {
        <div class="confirmar-vacio">
            <p>Tu carrito está vacío.</p>
            <a asp-action="Index" asp-controller="Carrito" class="btn-volver">Volver al carrito</a>
        </div>
    }
    else
    {
        <div class="confirmar-table-container">
            <table class="confirmar-table">
                <thead>
                    <tr>
                        <th>Imagen</th>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Detalles)
                    {
                        var subtotal = item.Libro.precio * item.Cantidad;
                        total += subtotal;
                        <tr>
                            <td>
                                <img src="~/img/@item.Libro.imagen" alt="@item.Libro.titulo" class="confirmar-img" />
                            </td>
                            <td>
                                <div class="confirmar-title">@item.Libro.titulo</div>
                                <div class="confirmar-author">@item.Libro.autor</div>
                            </td>
                            <td class="confirmar-price">S/. @item.Libro.precio</td>
                            <td>
                                <span class="confirmar-quantity">@item.Cantidad</span>
                            </td>
                            <td class="confirmar-subtotal">S/. @subtotal</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="confirmar-tfoot">
                    <tr>
                        <td colspan="4" class="confirmar-total-label">Total:</td>
                        <td class="confirmar-total-value">S/. @total</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="confirmar-form-container">
            <h3 class="confirmar-form-title">Información de Pago</h3>

            <form asp-controller="Venta" asp-action="Crear" method="post">
                <input type="hidden" name="idUsuario" value="@Model.IdUsuario" />

                <label for="IdMetodoPago" class="form-label">Método de Pago:</label>
                <select name="idMetodoPago" id="IdMetodoPago" class="form-select">
                    <option value="">-- Selecciona un método de pago --</option>
                    @foreach (SelectListItem metodo in ViewBag.MetodosDePago)
                    {
                        <option value="@metodo.Value">@metodo.Text</option>
                    }
                </select>

                <input type="hidden"
                       name="detalles"
                       value='@JsonConvert.SerializeObject(
                                                  Model.Detalles.Select(x => new DetalleVentaRequest { IdLibro = x.IdLibro, Cantidad = x.Cantidad })
                                              )' />

            <div class="confirmar-actions">
                <button type="submit" class="btn-confirmar">Confirmar Compra</button>
                <a asp-action="Index" asp-controller="Carrito" class="btn-cancelar">Cancelar</a>
            </div>
        </form>
    </div>
        }
</div>