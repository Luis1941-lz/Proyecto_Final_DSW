@model IEnumerable<Proyecto_DSW.Models.Libro>

@{
    ViewData["Title"] = "Panel de Administración - Libros";
}

<h1 class="mb-4 text-center text-primary">📚 Panel de Administración - Libros</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Agregar Nuevo Libro
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>#</th>
                <th>Imagen</th>
                <th>Título</th>
                <th>Autor</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Categoría</th>
                <th>PDF</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libro in Model)
            {
                <tr>
                    <td class="text-center">@libro.id_libro</td>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(libro.imagen))
                        {
                            <img src="@Url.Content(libro.imagen)" alt="@libro.titulo" class="img-fluid" style="max-height: 60px; object-fit: cover;">
                        }
                        else
                        {
                            <span class="text-muted small">No disponible</span>
                        }
                    </td>
                    <td class="text-truncate" style="max-width: 150px;">@libro.titulo</td>
                    <td>@libro.autor</td>
                    <td class="text-end">S/. @libro.precio.ToString("F2")</td>
                    <td class="text-center">@libro.stock</td>
                    <td>@libro.Categoria?.nombre</td>
                    <td class="text-center">
                        @(libro.tiene_pdf && !string.IsNullOrEmpty(libro.pdf_url) ? "Sí" : "No")
                    </td>
                    <td class="text-center">
                        <div class="d-flex flex-column flex-md-row justify-content-center gap-1">
                            <a asp-action="Edit" asp-route-id="@libro.id_libro" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@libro.id_libro" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Detalle
                            </a>
                            <form asp-action="Delete" asp-route-id="@libro.id_libro" method="post" class="d-inline" onsubmit="return confirm('¿Seguro que deseas eliminar este libro?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
