@model Proyecto_DSW.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<link rel="stylesheet" href="/css/DetalleAdmin.css" />

<h1>Detalles del Usuario</h1>

<div class="user-details">
    <h4>Información del Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID de Usuario</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.id_usuario)</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.nombre)</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.apellido)</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.correo)</dd>

        <dt class="col-sm-2">Contraseña</dt>
        <dd class="col-sm-10">••••••••</dd>

        <dt class="col-sm-2">Imagen</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.imagen)</dd>

        <dt class="col-sm-2">Tipo de Usuario</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.id_tipo_usuario)</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.id_estado)</dd>
    </dl>
</div>
<div class="actions">
    @Html.ActionLink("Editar", "Editar", new { id = Model.id_usuario }, new { @class = "btn btn-edit" })
    <a asp-action="Index" class="btn btn-back">Volver al Listado</a>
</div>