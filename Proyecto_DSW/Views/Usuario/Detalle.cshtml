@model Proyecto_DSW.Models.Usuario

@{
    ViewData["Title"] = "Detalle de Usuario";
}

<h1>Detalle de Usuario</h1>
<hr />

<div class="card" style="width: 28rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.nombre @Model.apellido</h5>
        <p class="card-text"><strong>ID:</strong> @Model.id_usuario</p>
        <p class="card-text"><strong>Correo:</strong> @Model.correo</p>
        <p class="card-text"><strong>Contraseña:</strong> @Model.contrasena</p>
        <p class="card-text"><strong>Tipo Usuario:</strong> @Model.id_tipo_usuario</p>
        <p class="card-text"><strong>Estado:</strong> @Model.id_estado</p>

        @if (!string.IsNullOrEmpty(Model.imagen))
        {
            <p><strong>Imagen:</strong></p>
            <img src="@Model.imagen" alt="Imagen Usuario" style="max-height:150px;" />
        }
        else
        {
            <p><em>Sin imagen</em></p>
        }

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
            <a asp-action="Editar" asp-route-id="@Model.id_usuario" class="btn btn-primary">Editar</a>
            <a asp-action="Eliminar" asp-route-id="@Model.id_usuario" class="btn btn-danger">Eliminar</a>
        </div>
    </div>
</div>
