@model IEnumerable<Proyecto_DSW.Models.PlanSuscripciones>

@{
    ViewData["Title"] = "Planes de Suscripción";
}

<link rel="stylesheet" href="~/css/Suscripciones.css" />

<div class="suscripciones-container">
    <div class="suscripciones-header">
        <h1>Planes de Suscripción</h1>
        <p class="suscripciones-subtitle">Elige el plan que mejor se adapte a tus necesidades y disfruta de acceso ilimitado a nuestro contenido premium</p>
    </div>

    <div class="suscripciones-grid">
        @foreach (var item in Model)
        {
            <div class="plan-card @(item.precio < 50 ? "popular" : "")">
                @if (item.precio < 50)
                {
                    <span class="plan-badge">Popular</span>
                }

                <div class="plan-header">
                    <h3 class="plan-title">@item.nombre</h3>
                    <div class="plan-subtitle">Duración: @item.duracion_dias días</div>
                    <div class="plan-price">
                        <span class="currency">S/.</span>@item.precio
                        <span class="period">/plan</span>
                    </div>
                </div>

                <div class="plan-body">
                    <ul class="plan-features">
                        <li><i class="fas fa-check"></i> Acceso a todos los libros</li>
                        <li><i class="fas fa-check"></i> Descargas ilimitadas</li>
                        <li><i class="fas fa-check"></i> Contenido exclusivo</li>
                        <li><i class="fas fa-check"></i> Soporte prioritario</li>
                        <li><i class="fas fa-check"></i> Sin anuncios</li>
                    </ul>
                </div>

                <div class="plan-footer">
                    <form method="get" asp-action="FormularioPago" asp-controller="Pago">
                        <input type="hidden" name="id_plan_suscripcion" value="@item.id_plan_suscripcion" />
                        <input type="hidden" name="precio" value="@item.precio" />
                        <button type="submit" class="btn-subscribe">
                            <i class="fas fa-shopping-cart"></i> Suscribirse ahora
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<!-- Agrega Font Awesome para los iconos -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>