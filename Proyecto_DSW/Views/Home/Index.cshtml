@model IEnumerable<Proyecto_DSW.Models.Libro>

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

@if (TempData["AccesoDenegado"] != null)
{
    <div class="alert alert-warning text-center">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["AccesoDenegado"]
    </div>
}

<main>
    <section class="hero">
        <div class="container hero-content">
            <h2>Descubre un mundo de conocimiento</h2>
            <p>Explora nuestra colección de más de 10,000 libros en diferentes géneros. Compra libros físicos o suscríbete para acceso ilimitado a nuestra biblioteca digital.</p>
            <div class="hero-buttons">
                <a href="#libros" class="btn">Explorar Libros</a>
                <a href="#suscripcion" class="btn btn-outline">Ver Suscripción</a>
            </div>
        </div>
    </section>

    <section id="libros" class="container">
        <div class="section-title">
            <h2>Libros Destacados</h2>
        </div>

        <div class="books-grid">
            @foreach (var libro in Model)
            {
                <div class="book-card">
                    <div class="book-img">
                        <img src="@Url.Content(libro.imagen)" alt="@libro.titulo" />
                        <div class="book-badge">Nuevo</div>
                    </div>
                    <div class="book-info">
                        <h3>@libro.titulo</h3>
                        <br />
                        <div class="author">@libro.autor</div>
                        <div class="price">S/. @libro.precio.ToString("F2")</div>
                        <div class="book-actions">
                            <a asp-controller="Libro" asp-action="Details" asp-route-id="@libro.id_libro" class="btn btn-sm btn-outline-primary">Ver más</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section id="suscripcion" class="subscription">
        <div class="container">
            <h2>Suscripción Premium</h2>
            <p>Accede a nuestra biblioteca completa de libros digitales con una suscripción mensual. Lee en cualquier dispositivo y descarga tus libros favoritos en PDF.</p>
            <a href="#" class="btn" id="subscribe-btn">Suscríbete Ahora</a>

            <div class="benefits">
                <div class="benefit">
                    <i class="fas fa-book-open"></i>
                    <h3>Acceso Ilimitado</h3>
                    <p>Más de 10,000 libros en todos los géneros</p>
                </div>
                <div class="benefit">
                    <i class="fas fa-download"></i>
                    <h3>Descargas PDF</h3>
                    <p>Descarga cualquier libro para leer offline</p>
                </div>
                <div class="benefit">
                    <i class="fas fa-sync-alt"></i>
                    <h3>Sin Compromiso</h3>
                    <p>Cancela tu suscripción en cualquier momento</p>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="~/js/index.js" asp-append-version="true"></script>
}
