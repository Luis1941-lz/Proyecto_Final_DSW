@{
    ViewData["Title"] = "Iniciar sesión";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="login-container">
    <!-- Decoraciones de fondo -->
    <div class="login-decoration decoration-1"></div>
    <div class="login-decoration decoration-2"></div>
    <div class="login-decoration decoration-3"></div>

    <div class="login-card">
        <div class="login-header">
            <h2>Iniciar sesión</h2>
            <p class="login-subtitle">Bienvenido de vuelta</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post" novalidate class="login-form">
            <div class="form-group">
                <label for="correo" class="form-label">Correo electrónico</label>
                <input type="email" class="form-control" id="correo" name="correo" placeholder="tu@correo.com" required autofocus />
                <div class="invalid-feedback">
                    Por favor ingresa un correo válido.
                </div>
            </div>

            <div class="form-group">
                <label for="contrasena" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="********" required />
                <div class="invalid-feedback">
                    Por favor ingresa tu contraseña.
                </div>
            </div>

            <button type="submit" class="btn-login" id="loginButton">Ingresar</button>
        </form>

        <div class="login-footer">
            <small>¿No tienes cuenta? <a href="#" class="register-link">Regístrate aquí</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict'
            const forms = document.querySelectorAll('form')
            const loginButton = document.getElementById('loginButton')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    } else {
                        // Mostrar estado de carga
                        loginButton.classList.add('loading')
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}